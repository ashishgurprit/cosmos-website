<style>
  .page-hero {
    background: linear-gradient(135deg, var(--navy-dark) 0%, var(--navy) 100%);
    padding: 8rem 0 4rem;
    text-align: center;
    color: var(--white);
  }
  .page-hero h1 { color: var(--white); margin-bottom: 1rem; }
  .page-hero p { color: var(--grey-300); font-size: 1.25rem; }

  .portfolio-section { padding: 5rem 0; }

  .portfolio-intro {
    max-width: 700px;
    margin: 0 auto 3rem;
    text-align: center;
  }

  .portfolio-intro p {
    color: var(--grey);
    font-size: 1.1rem;
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .portfolio-item {
    background: var(--white);
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid var(--grey-200);
    transition: all var(--transition-base);
  }

  .portfolio-item:hover {
    box-shadow: var(--shadow-xl);
    transform: translateY(-4px);
  }

  .portfolio-image {
    aspect-ratio: 16/10;
    background: var(--grey-100);
    overflow: hidden;
  }

  .portfolio-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
  }

  .portfolio-item:hover .portfolio-image img {
    transform: scale(1.05);
  }

  .portfolio-content {
    padding: 1.5rem 2rem 2rem;
  }

  .portfolio-tag {
    display: inline-block;
    background: var(--grey-100);
    color: var(--accent);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .portfolio-content h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
  }

  .portfolio-content p {
    color: var(--grey);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .portfolio-results {
    list-style: none;
    display: flex;
    gap: 1.5rem;
  }

  .portfolio-results li {
    font-size: 0.9rem;
    color: var(--grey-dark);
  }

  .portfolio-results strong {
    color: var(--success);
  }

  .portfolio-note {
    margin-top: 3rem;
    padding: 1.5rem;
    background: var(--grey-100);
    border-radius: 8px;
    text-align: center;
  }

  .portfolio-note p {
    margin: 0;
    color: var(--grey);
    font-size: 0.9rem;
  }

  .cta {
    padding: 5rem 0;
    text-align: center;
  }

  .cta h2 { color: var(--white); margin-bottom: 1rem; }
  .cta p { color: var(--grey-300); margin-bottom: 2rem; }

  .nav-links a.active { color: var(--accent); }

  @media (max-width: 768px) {
    .portfolio-grid {
      grid-template-columns: 1fr;
    }

    .portfolio-results {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
