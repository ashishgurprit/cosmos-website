  }

  .content-wrapper li {
    margin-bottom: 0.5rem;
  }

  .content-wrapper a {
    color: var(--accent);
    text-decoration: none;
  }

  .content-wrapper a:hover {
    text-decoration: underline;
  }

  .contact-box {
    background: var(--grey-100);
    padding: 1.5rem;
    border-radius: 12px;
    margin-top: 1rem;
  }

  .contact-box p {
    margin-bottom: 0.5rem;
  }

  .contact-box a {
    color: var(--accent);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: rgba(255,255,255,0.1);
    border-radius: 50%;
    color: white;
    transition: all 0.2s ease;
  }

  .social-links a:hover {
    background: var(--accent);
    transform: translateY(-2px);
  }

  .social-links svg {
    width: 18px;
    height: 18px;
  }
