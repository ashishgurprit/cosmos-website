<style>
  .page-hero {
    background: linear-gradient(135deg, var(--navy-dark) 0%, var(--navy) 100%);
    padding: 8rem 0 4rem;
    text-align: center;
    color: var(--white);
  }
  .page-hero h1 { color: var(--white); margin-bottom: 1rem; }
  .page-hero p { color: var(--grey-300); font-size: 1.25rem; }

  .about-intro { padding: 5rem 0; }

  .intro-grid {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 4rem;
    align-items: start;
  }

  .intro-content h2 { margin-bottom: 1.5rem; }
  .intro-content p {
    color: var(--grey-dark);
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .intro-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .stat-card {
    background: var(--grey-100);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
  }

  .stat-num {
    font-size: 2rem;
    font-weight: 800;
    color: var(--navy-dark);
  }

  .stat-label {
    font-size: 0.85rem;
    color: var(--grey);
    margin-top: 0.25rem;
  }

  .values { padding: 5rem 0; }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .value-card {
    background: var(--white);
    padding: 2rem;
    border-radius: 16px;
    text-align: center;
    box-shadow: var(--shadow);
  }

  .value-icon {
    width: 60px;
    height: 60px;
    background: var(--grey-100);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
  }

  .value-icon svg {
    width: 28px;
    height: 28px;
    stroke: var(--accent);
  }

  .value-card h3 {
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
  }

  .value-card p {
    font-size: 0.9rem;
    color: var(--grey);
    margin: 0;
    line-height: 1.6;
  }

  /* Team Section */
  .team-section {
    padding: 5rem 0;
    background: var(--white);
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .team-card {
    text-align: center;
    padding: 2rem;
    background: var(--grey-100);
    border-radius: 16px;
    transition: transform 0.3s ease;
  }

  .team-card:hover {
    transform: translateY(-5px);
  }

  .team-avatar {
    width: 100px;
    height: 100px;
    margin: 0 auto 1rem;
    background: linear-gradient(135deg, var(--navy-dark) 0%, var(--navy) 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .team-avatar span {
    color: white;
    font-size: 1.75rem;
    font-weight: 700;
  }

  .team-card h3 {
    color: var(--navy-dark);
    font-size: 1.15rem;
    margin-bottom: 0.25rem;
  }

  .team-role {
    color: var(--accent);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .team-card p {
    color: var(--grey);
    font-size: 0.85rem;
    line-height: 1.6;
    margin: 1rem 0;
  }

  .linkedin-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #0077b5;
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 500;
  }

  .linkedin-link svg {
    width: 16px;
    height: 16px;
  }

  .linkedin-link:hover {
    text-decoration: underline;
  }

  .services-overview { padding: 5rem 0; }

  .services-list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .service-summary {
    padding: 2rem;
    background: var(--grey-100);
    border-radius: 16px;
  }

  .service-summary h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
  }

  .service-summary p {
    color: var(--grey-dark);
    margin-bottom: 1rem;
