---
import Layout from '../../layouts/Layout.astro';

// Dynamically load all blog posts from the directory
const allPosts = await Astro.glob('./*.astro');

// Filter out index.astro and extract metadata
const posts = allPosts
  .filter(post => !post.file.includes('index.astro'))
  .map(post => {
    const frontmatter = post.frontmatter || {};
    const slug = post.file.split('/').pop()?.replace('.astro', '') || '';

    return {
      slug,
      title: frontmatter.title || 'Untitled',
      excerpt: frontmatter.description || frontmatter.excerpt || '',
      category: frontmatter.category || 'Web Design',
      date: frontmatter.publishedAt || frontmatter.date || '2025-01-13',
      readTime: frontmatter.readTime || '5 min read',
      image: frontmatter.heroImage || `https://images.unsplash.com/photo-1467232004584-a241de8bcf5d?w=600&h=400&fit=crop`
    };
  })
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime()); // Sort by date, newest first

const categories = ["All", "Web Design", "SEO", "WordPress", "E-commerce", "Digital Marketing"];
