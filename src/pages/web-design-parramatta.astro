<style>
  .page-hero {
    background: linear-gradient(135deg, var(--navy-dark) 0%, var(--navy) 100%);
    padding: 8rem 0 4rem;
    text-align: center;
    color: var(--white);
  }
  .page-hero h1 { color: var(--white); margin-bottom: 1rem; }
  .page-hero p { color: var(--grey-300); font-size: 1.25rem; }

  .main-content { padding: 5rem 0; }

  .content-grid {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 4rem;
  }

  .content-main h2 { margin-bottom: 1.5rem; }
  .content-main h3 { margin-top: 3rem; margin-bottom: 1rem; }
  .content-main p { color: var(--grey-dark); line-height: 1.8; margin-bottom: 1.5rem; }

  .benefits-list, .check-list { list-style: none; margin: 1.5rem 0; }
  .benefits-list li, .check-list li {
    padding: 0.75rem 0 0.75rem 2rem;
    position: relative;
    border-bottom: 1px solid var(--grey-200);
  }
  .benefits-list li::before, .check-list li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--success);
    font-weight: bold;
  }

  .service-boxes {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .service-box {
    padding: 1.5rem;
    background: var(--grey-100);
    border-radius: 12px;
  }
  .service-box h4 { margin-bottom: 0.5rem; font-size: 1.1rem; }
  .service-box p { margin: 0; font-size: 0.9rem; color: var(--grey); }

  .suburbs-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin: 1.5rem 0;
  }
  .suburbs-grid ul { list-style: none; }
  .suburbs-grid li { padding: 0.25rem 0; color: var(--grey-dark); font-size: 0.95rem; }

  .sidebar-card {
    background: var(--grey-100);
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 1.5rem;
  }
  .sidebar-card h3 { margin-bottom: 1rem; font-size: 1.2rem; }
  .sidebar-card p { color: var(--grey); font-size: 0.95rem; margin-bottom: 1rem; }
  .or-call { text-align: center; margin-top: 1rem; font-size: 0.9rem; }
  .or-call a { color: var(--accent); font-weight: 600; }

  .package-mini {
    display: flex;
    justify-content: space-between;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--grey-200);
  }
  .package-mini strong { color: var(--navy-dark); }
  .package-mini span { color: var(--accent); font-weight: 600; }

  .sidebar-link { color: var(--accent); font-weight: 500; display: inline-block; margin-top: 1rem; }

  .location-links { list-style: none; }
  .location-links li { padding: 0.5rem 0; }
  .location-links a { color: var(--accent); }

  .cta { padding: 5rem 0; text-align: center; }
  .cta h2 { color: var(--white); margin-bottom: 1rem; }
  .cta p { color: var(--grey-300); margin-bottom: 2rem; }
  .cta-buttons { display: flex; justify-content: center; gap: 1rem; }

  .btn-outline-white {
    background: transparent;
    color: var(--white);
    border: 2px solid var(--white);
  }
  .btn-outline-white:hover {
    background: var(--white);
    color: var(--navy-dark);
  }

  @media (max-width: 1024px) {
    .content-grid { grid-template-columns: 1fr; }
    .content-sidebar { order: -1; }
  }

  @media (max-width: 768px) {
    .service-boxes, .suburbs-grid { grid-template-columns: 1fr; }
    .cta-buttons { flex-direction: column; align-items: center; }
  }
</style>
