---
import Layout from '../../layouts/Layout.astro';

const resources = [
  {
    slug: "website-cost-guide",
    title: "Website Cost Guide 2025",
    description: "Understand what goes into website pricing and estimate your budget. Covers everything from simple brochure sites to complex e-commerce stores.",
    icon: "calculator",
    color: "#3b82f6"
  },
  {
    slug: "planning-checklist",
    title: "Website Planning Checklist",
    description: "15 essential questions to answer before starting your website project. Avoid costly mistakes and delays.",
    icon: "checklist",
    color: "#10b981"
  },
  {
    slug: "seo-checklist",
    title: "SEO Audit Checklist",
    description: "50-point SEO checklist to identify issues hurting your Google rankings. Perfect for DIY website owners.",
    icon: "search",
    color: "#8b5cf6"
  },
  {
    slug: "requirements-template",
    title: "Website Requirements Template",
    description: "Professional template to document your website requirements. Share with developers to get accurate quotes.",
    icon: "document",
    color: "#f59e0b"
  }
];
---

<Layout title="Free Resources | Guides & Templates | Cosmos Web Tech" description="Free website guides, checklists, and templates to help plan your web project. Download our Website Cost Guide, Planning Checklist, SEO Audit Checklist, and more.">
  <header class="header">
    <div class="container">
      <nav class="nav">
        <a href="/" class="logo">
          <div class="logo-icon">
            <svg viewBox="0 0 50 50" fill="none" xmlns="http://www.w3.org/2000/svg">
