    margin-bottom: 0.5rem;
  }

  .preview-item h3 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: var(--navy-dark);
  }

  .preview-item p {
    color: var(--grey);
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .social-proof {
    padding: 5rem 0;
    text-align: center;
  }

  .proof-content h2 {
