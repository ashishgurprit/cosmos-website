        /* Ruby on Rails + SCSS Stack Demo */
        :root {
            --primary: #b8860b;
            --primary-light: #daa520;
            --secondary: #2d2d2d;
            --accent: #c9a86c;
            --rose: #e8d5d5;
            --cream: #faf8f5;
            --text: #2d2d2d;
            --text-light: #6b6b6b;
            --bg: #ffffff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            line-height: 1.7;
            background: var(--bg);
        }

        h1, h2, h3, h4 {
            font-family: 'Cormorant Garamond', serif;
            font-weight: 600;
            line-height: 1.2;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 24px;
        }

        /* Demo Banner */
        .demo-banner {
            background: linear-gradient(90deg, var(--secondary), #444);
            color: white;
            text-align: center;
            padding: 12px;
            font-weight: 500;
            font-size: 0.875rem;
        }

        .demo-banner a {
            color: var(--primary-light);
            text-decoration: underline;
        }

        /* Header */
        .header {
            background: white;
            padding: 20px 0;
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            text-align: center;
        }

        .logo h1 {
            font-size: 2rem;
            letter-spacing: 3px;
            color: var(--secondary);
        }

        .logo span {
            display: block;
            font-family: 'Montserrat', sans-serif;
            font-size: 0.7rem;
            letter-spacing: 4px;
            color: var(--primary);
            text-transform: uppercase;
            margin-top: 5px;
        }

        .nav {
            display: flex;
            gap: 40px;
            align-items: center;
        }

        .nav a {
            color: var(--text);
            text-decoration: none;
            font-size: 0.85rem;
            letter-spacing: 1px;
            text-transform: uppercase;
            font-weight: 500;
            transition: color 0.3s;
        }

        .nav a:hover {
            color: var(--primary);
        }

        .btn {
            display: inline-block;
            padding: 14px 32px;
            font-size: 0.8rem;
            letter-spacing: 2px;
            text-transform: uppercase;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s;
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            background: var(--secondary);
            color: white;
        }

        .btn-primary:hover {
            background: var(--primary);
        }

        .btn-outline {
            border: 1px solid var(--secondary);
            color: var(--secondary);
            background: transparent;
        }

        .btn-outline:hover {
            background: var(--secondary);
            color: white;
        }

        .btn-gold {
            background: var(--primary);
            color: white;
        }

        .btn-gold:hover {
            background: var(--primary-light);
        }

        /* Hero */
        .hero {
            height: 80vh;
            min-height: 600px;
            display: flex;
            align-items: center;
            background: linear-gradient(135deg, var(--cream) 50%, var(--rose) 100%);
            position: relative;
            overflow: hidden;
        }

        .hero::before {
            content: '';
            position: absolute;
            right: 0;
            top: 0;
            width: 50%;
            height: 100%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="1" fill="%23b8860b" opacity="0.3"/><circle cx="80" cy="40" r="1.5" fill="%23b8860b" opacity="0.2"/><circle cx="40" cy="70" r="1" fill="%23b8860b" opacity="0.25"/></svg>');
        }

        .hero-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 80px;
            align-items: center;
        }

        .hero-text {
            position: relative;
            z-index: 1;
        }

        .hero-tag {
            font-size: 0.75rem;
            letter-spacing: 4px;
            text-transform: uppercase;
            color: var(--primary);
            margin-bottom: 20px;
        }

        .hero h1 {
            font-size: 4rem;
            color: var(--secondary);
            margin-bottom: 24px;
        }

        .hero h1 em {
            font-style: italic;
            color: var(--primary);
        }

        .hero p {
            font-size: 1.1rem;
            color: var(--text-light);
            margin-bottom: 40px;
            line-height: 1.9;
        }

        .hero-buttons {
            display: flex;
            gap: 20px;
        }

        .hero-image {
            position: relative;
            z-index: 1;
        }

        .hero-image-frame {
            background: linear-gradient(135deg, var(--rose), var(--cream));
            height: 500px;
            border-radius: 200px 200px 0 0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12rem;
            position: relative;
            box-shadow: 0 30px 60px rgba(0,0,0,0.1);
        }

        .hero-image-frame::before {
            content: '';
            position: absolute;
            top: -20px;
            left: -20px;
            right: -20px;
            bottom: -20px;
            border: 1px solid var(--primary);
            border-radius: 220px 220px 0 0;
            opacity: 0.5;
        }

        /* About */
        .about {
            padding: 120px 0;
            background: white;
        }

        .about-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 80px;
            align-items: center;
        }

        .about-image {
            background: var(--rose);
            height: 450px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 8rem;
            position: relative;
        }

        .about-image::before {
            content: '';
            position: absolute;
            top: 30px;
            left: 30px;
            right: -30px;
            bottom: -30px;
            border: 1px solid var(--primary);
            z-index: -1;
        }

        .section-tag {
            font-size: 0.75rem;
            letter-spacing: 4px;
            text-transform: uppercase;
            color: var(--primary);
            margin-bottom: 16px;
        }

        .about h2 {
            font-size: 2.75rem;
            margin-bottom: 24px;
            color: var(--secondary);
        }

        .about p {
            color: var(--text-light);
            margin-bottom: 20px;
            line-height: 1.9;
        }

        /* Services */
        .services {
            padding: 120px 0;
            background: var(--cream);
        }

        .section-header {
            text-align: center;
            margin-bottom: 60px;
        }

        .section-header h2 {
            font-size: 2.75rem;
            margin-bottom: 16px;
            color: var(--secondary);
        }

        .section-header p {
            color: var(--text-light);
            max-width: 600px;
            margin: 0 auto;
        }

        .services-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 40px;
        }

        .service-card {
            background: white;
            padding: 50px 40px;
            text-align: center;
            transition: all 0.4s;
            border: 1px solid transparent;
        }

        .service-card:hover {
            border-color: var(--primary);
            transform: translateY(-10px);
            box-shadow: 0 30px 60px rgba(0,0,0,0.1);
        }

        .service-icon {
            font-size: 3.5rem;
            margin-bottom: 24px;
        }

        .service-card h3 {
            font-size: 1.5rem;
            margin-bottom: 16px;
            color: var(--secondary);
        }

        .service-card p {
            color: var(--text-light);
            margin-bottom: 20px;
            font-size: 0.95rem;
        }

        .service-price {
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.25rem;
            color: var(--primary);
            font-weight: 600;
        }

        /* Pricing */
        .pricing {
            padding: 120px 0;
            background: white;
        }

        .pricing-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 60px;
        }

        .pricing-category {
            padding: 40px;
            background: var(--cream);
        }

        .pricing-category h3 {
            font-size: 1.75rem;
            margin-bottom: 30px;
            color: var(--secondary);
            padding-bottom: 15px;
            border-bottom: 1px solid var(--primary);
        }

        .price-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px dotted #ddd;
        }

        .price-item:last-child {
            border-bottom: none;
        }

        .price-item span:first-child {
            font-weight: 500;
        }

        .price-item span:last-child {
            color: var(--primary);
            font-weight: 600;
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.1rem;
        }

        /* Team */
        .team {
            padding: 120px 0;
            background: var(--secondary);
            color: white;
        }

        .team .section-header h2 {
            color: white;
        }

        .team .section-header p {
            color: rgba(255,255,255,0.7);
        }

        .team .section-tag {
            color: var(--primary-light);
        }

        .team-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 30px;
        }

        .team-card {
            text-align: center;
        }

        .team-image {
            width: 180px;
            height: 180px;
            margin: 0 auto 20px;
            background: var(--rose);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 4rem;
            position: relative;
        }

        .team-image::before {
            content: '';
            position: absolute;
            top: -5px;
            left: -5px;
            right: -5px;
            bottom: -5px;
            border: 1px solid var(--primary);
            border-radius: 50%;
        }

        .team-card h3 {
            font-size: 1.25rem;
            margin-bottom: 5px;
        }

        .team-card .role {
            color: var(--primary-light);
            font-size: 0.85rem;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        /* Gallery */
        .gallery {
            padding: 120px 0;
            background: white;
        }

        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 15px;
        }

        .gallery-item {
            aspect-ratio: 1;
            background: var(--rose);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            cursor: pointer;
            transition: all 0.3s;
        }

        .gallery-item:hover {
            transform: scale(1.05);
            z-index: 1;
        }

        .gallery-item:nth-child(1) { background: #e8d5d5; }
        .gallery-item:nth-child(2) { background: #d5e8e8; }
        .gallery-item:nth-child(3) { background: #e8e5d5; }
        .gallery-item:nth-child(4) { background: #e5d5e8; }
        .gallery-item:nth-child(5) { background: #d5e8d5; }
        .gallery-item:nth-child(6) { background: #e8d5e5; }
        .gallery-item:nth-child(7) { background: #d5d5e8; }
        .gallery-item:nth-child(8) { background: #e8e8d5; }

        /* CTA */
        .cta {
            padding: 100px 0;
            background: var(--rose);
            text-align: center;
        }

        .cta h2 {
            font-size: 3rem;
            margin-bottom: 16px;
            color: var(--secondary);
        }

        .cta p {
            color: var(--text-light);
            margin-bottom: 40px;
            font-size: 1.1rem;
        }

        /* Footer */
        .footer {
            background: var(--secondary);
            color: white;
            padding: 80px 0 40px;
        }

        .footer-content {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 1fr;
            gap: 60px;
            margin-bottom: 60px;
        }

        .footer-logo h3 {
            font-size: 1.75rem;
            letter-spacing: 2px;
            margin-bottom: 20px;
        }

        .footer-logo p {
            color: rgba(255,255,255,0.7);
            font-size: 0.95rem;
            line-height: 1.8;
        }

        .footer h4 {
            font-size: 0.85rem;
            letter-spacing: 2px;
            text-transform: uppercase;
            margin-bottom: 24px;
            color: var(--primary-light);
            font-family: 'Montserrat', sans-serif;
        }

        .footer ul {
            list-style: none;
        }

        .footer ul li {
            margin-bottom: 12px;
        }

        .footer ul a {
            color: rgba(255,255,255,0.7);
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.3s;
        }

        .footer ul a:hover {
            color: white;
        }

        .footer-bottom {
            padding-top: 40px;
            border-top: 1px solid rgba(255,255,255,0.1);
            text-align: center;
            color: rgba(255,255,255,0.5);
            font-size: 0.85rem;
        }

        .footer-bottom a {
            color: var(--primary-light);
        }

        /* Responsive */
        @media (max-width: 992px) {
            .hero-content,
            .about-content {
                grid-template-columns: 1fr;
                text-align: center;
            }

            .hero h1 {
                font-size: 3rem;
            }

            .hero-buttons {
                justify-content: center;
            }

            .hero-image-frame {
                height: 400px;
                max-width: 400px;
                margin: 0 auto;
            }

            .services-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .team-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .footer-content {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 768px) {
            .nav {
                display: none;
            }

            .hero {
                height: auto;
                padding: 80px 0;
            }

            .hero h1 {
                font-size: 2.5rem;
            }

            .services-grid,
            .pricing-grid {
                grid-template-columns: 1fr;
            }

            .gallery-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .team-grid {
                grid-template-columns: 1fr;
            }

            .footer-content {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
