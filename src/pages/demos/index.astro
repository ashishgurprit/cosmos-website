<style>
  .page-hero {
    background: linear-gradient(135deg, var(--navy-dark) 0%, var(--navy) 100%);
    padding: 8rem 0 4rem;
    text-align: center;
    color: var(--white);
  }
  .page-hero h1 { color: var(--white); margin-bottom: 1rem; }
  .page-hero p { color: var(--grey-300); font-size: 1.25rem; }

  .demos-section { padding: 5rem 0; }

  .intro-text {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 3rem;
    color: var(--grey);
    font-size: 1.1rem;
  }

  .demos-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .demo-card {
    background: var(--white);
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid var(--grey-200);
    transition: all var(--transition-base);
    text-decoration: none;
  }

  .demo-card:hover {
    box-shadow: var(--shadow-xl);
    transform: translateY(-6px);
  }

  .demo-preview {
    aspect-ratio: 16/10;
    position: relative;
    overflow: hidden;
  }

  .demo-preview img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
  }

  .demo-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-base);
  }

  .demo-view {
    color: white;
    font-weight: 600;
    font-size: 1rem;
    padding: 0.75rem 1.5rem;
    border: 2px solid white;
    border-radius: 8px;
    transform: translateY(10px);
    transition: transform var(--transition-base);
  }

  .demo-card:hover .demo-preview img {
    transform: scale(1.1);
  }

  .demo-card:hover .demo-overlay {
    opacity: 1;
  }

  .demo-card:hover .demo-view {
    transform: translateY(0);
  }

  .demo-info {
    padding: 1.5rem;
  }

  .demo-category {
    display: inline-block;
    background: var(--grey-100);
    color: var(--grey-dark);
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.5rem;
  }

  .demo-info h3 {
    font-size: 1.15rem;
    margin-bottom: 0.5rem;
    color: var(--navy-dark);
  }

  .demo-info p {
    color: var(--grey);
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: 1rem;
  }

  .demo-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .demo-tech {
    font-size: 0.8rem;
    color: var(--grey-light);
    background: var(--grey-100);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .demo-link {
    color: var(--accent);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .demos-cta {
    margin-top: 4rem;
    padding: 4rem;
    background: var(--grey-100);
    border-radius: 24px;
    text-align: center;
  }

  .demos-cta h2 { margin-bottom: 1rem; }
  .demos-cta p {
    color: var(--grey);
    font-size: 1.1rem;
    margin-bottom: 2rem;
  }

  .nav-links a.active { color: var(--accent); }

  @media (max-width: 1024px) {
    .demos-grid { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 768px) {
    .demos-grid { grid-template-columns: 1fr; }
    .demos-cta { padding: 2rem; }
  }
</style>
