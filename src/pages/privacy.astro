<style>
  .content-section {
    padding: 4rem 0;
    background: white;
  }

  .content-wrapper {
    max-width: 800px;
    margin: 0 auto;
    color: var(--black);
    line-height: 1.8;
  }

  .intro {
    font-size: 1.1rem;
    color: var(--grey);
    padding: 1.5rem;
    background: var(--grey-100);
    border-left: 4px solid var(--accent);
    border-radius: 0 8px 8px 0;
    margin-bottom: 2rem;
  }

  .content-wrapper h2 {
    color: var(--navy-dark);
    font-size: 1.5rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--grey-100);
  }

  .content-wrapper h3 {
    color: var(--navy);
    font-size: 1.15rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .content-wrapper p {
    margin-bottom: 1rem;
  }

  .content-wrapper ul {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .content-wrapper li {
    margin-bottom: 0.5rem;
  }

  .content-wrapper a {
    color: var(--accent);
    text-decoration: none;
  }

  .content-wrapper a:hover {
    text-decoration: underline;
  }

  .contact-box {
    background: var(--grey-100);
    padding: 1.5rem;
    border-radius: 12px;
    margin-top: 1rem;
  }

  .contact-box p {
    margin-bottom: 0.5rem;
  }

  .contact-box a {
    color: var(--accent);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: rgba(255,255,255,0.1);
    border-radius: 50%;
    color: white;
    transition: all 0.2s ease;
  }

  .social-links a:hover {
    background: var(--accent);
    transform: translateY(-2px);
  }

  .social-links svg {
    width: 18px;
    height: 18px;
  }
</style>
